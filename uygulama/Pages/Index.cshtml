<div class="counter-box">
    <h2 class="love-title">Birlikte geçirdiğimiz zamanımız </h2>
    <h2 id="timeTogether">0 ay, 0 gün, 0 saat, 0 dk, 0 sn</h2>
</div>

<script>
    const startDate = new Date("2024-11-21T00:00:00");
    let fakeNow = new Date(startDate);
    const realNow = new Date();
    const totalDiff = realNow - startDate;

    const steps = 100; // Kaç adımda ulaşsın
    const stepTime = 17; // Her adımda kaç ms ilerlesin
    const step = totalDiff / steps;

    let count = 0;
    let interval = setInterval(() => {
      fakeNow = new Date(fakeNow.getTime() + step);
      count++;

      updateCounter(fakeNow);

      if (count >= steps) {
        clearInterval(interval);
        // Gerçek zamana ulaştıktan sonra normal sayaç başlasın
        setInterval(() => {
          realNow.setSeconds(realNow.getSeconds() + 1);
          updateCounter(new Date(startDate.getTime() + (realNow - startDate)));
        }, 1000);
      }
    }, stepTime);

    function updateCounter(currentTime) {
      const diff = currentTime - startDate;

      const seconds = Math.floor(diff / 1000) % 60;
      const minutes = Math.floor(diff / (1000 * 60)) % 60;
      const hours = Math.floor(diff / (1000 * 60 * 60)) % 24;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const months = Math.floor(days / 30.44);
      const years = Math.floor(days / 365.25);

      const display = `${months % 12} ay, ${days % 30} gün, ${hours} saat, ${minutes} dk, ${seconds} sn `;
      document.getElementById("timeTogether").innerText = display;
    }
</script>

